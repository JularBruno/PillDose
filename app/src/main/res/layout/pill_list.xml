<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/idModulotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="MÃ³dulo: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="368dp"
        android:layout_height="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idPastilla" />

    <TextView
        android:id="@+id/idModulo"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginTop="8dp"
        android:text="00"
        app:layout_constraintStart_toEndOf="@+id/idModulotext"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pastillaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="Pastilla: "
        app:layout_constraintStart_toEndOf="@+id/idModulo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idPastilla"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/pastillaText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/horarioText"
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:text="Horario: "
        app:layout_constraintStart_toEndOf="@+id/idPastilla"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idHorario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/horarioText"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>